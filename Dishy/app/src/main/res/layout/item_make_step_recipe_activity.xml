<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp10"
    android:background="@drawable/custom_bottom_sheet"
    android:padding="@dimen/dp10"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_order_make_step_rcv_ra"
        android:text="Bước 1"
        android:textStyle="bold"
        android:textSize="@dimen/sp18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_step_make_rcv_ra"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150"/>
    <LinearLayout
        android:id="@+id/ll_dots_rcv"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25">
        <ImageView
            android:id="@+id/img_dots_image_one_rcv"
            android:src="@drawable/ic_radio_button_checked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/img_dots_image_wto_rcv"
            android:src="@drawable/ic_radio_button_unchecked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_repair"
        android:text="Công đoạn chuẩn bị"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="@dimen/sp13"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_make_step_des_rcv"
        android:inputType="textMultiLine"
        android:textSize="@dimen/sp16"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>