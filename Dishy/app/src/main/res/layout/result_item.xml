<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:id="@+id/item_result_search">
    <FrameLayout
        android:layout_weight="3"
        android:layout_width="@dimen/dp0"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageFood"
           android:padding="1.6dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:scaleType="fitXY"
            />
        <ImageView
            android:src="@drawable/custom_frame_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="@dimen/dp0"
        android:padding="@dimen/dp5"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nameFood"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:maxLength="25"
                    android:layout_height="wrap_content"
                    android:text="Cơm cuộn Hàn Quốc tại nhà"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/likeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3.4k"/>
                <ImageView
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    android:scaleType="fitXY"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_gravity="center_vertical"
                    ></ImageView>
                <TextView
                    android:id="@+id/timeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="35px"
                    android:text="30ph"/>
                <TextView
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dễ"/>
                </LinearLayout>
            <TextView
                android:id="@+id/foodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món chính"
                android:textSize="13dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/avatar"
                    android:layout_weight="1"
                    app:riv_border_color="@color/colorWhite"
                    app:riv_border_width="@dimen/dp1"
                    app:riv_corner_radius="@dimen/dp50"
                    android:layout_width="80px"
                    android:layout_height="70px"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp5"
                    android:scaleType="fitXY"
                    android:src="@color/colorBlue"/>
                <LinearLayout
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loginName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thanh Nhàn"/>

                    <TextView
                        android:id="@+id/numRecipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9 công thức" />
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/like"
        android:layout_weight="1"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border_black" />
</LinearLayout>