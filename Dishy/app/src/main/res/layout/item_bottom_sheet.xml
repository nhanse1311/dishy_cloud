<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lnl_root"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp10"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp23"
        android:orientation="horizontal"
        android:weightSum="10">
        <RadioButton
            android:id="@+id/rd_bottom_sheet"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp23"
            android:layout_weight="1"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_bts_value"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp17"
            android:layout_weight="9"
            android:lineHeight="@dimen/sp18"
            android:text="values"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp15" />
    </LinearLayout>
</LinearLayout>

