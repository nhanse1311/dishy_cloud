<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/custom_frame_input"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:padding="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_number_rv"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_button_next_step"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"/>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginLeft="@dimen/dp5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="9"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Tên nguyên liệu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_name_nl_rv"
                            android:background="@drawable/custom_frame_input"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:padding="@dimen/dp5"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Số lượng nguyên liệu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_quality_material_rv"
                            android:enabled="false"
                            android:background="@drawable/custom_frame_input"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:padding="@dimen/dp5"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Đơn Vị"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:id="@+id/ll_unit_rcv"
                            android:padding="@dimen/dp5"
                            android:layout_marginBottom="@dimen/dp5"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:background="@drawable/custom_frame_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_unit_rv"
                                android:layout_weight="9"
                                android:text="Chưa chọn"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_width="@dimen/dp0"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:src="@drawable/ic_arrow_drop_down"
                                android:layout_width="@dimen/dp0"
                                android:layout_weight="1"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_edit_rcv"
                    android:layout_marginTop="@dimen/dp5"
                    android:src="@drawable/ic_edit"
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>