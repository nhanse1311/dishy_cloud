<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EditThreeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:text="III.Cách Nấu"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/custom_frame_input"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:padding="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_order_make_step_"
                        android:text="1"
                        android:layout_marginTop="@dimen/dp5"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/custom_button_next_step"
                        android:gravity="center"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"/>

                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="9"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/edt_descrip_make_step_edit"
                                    android:hint="Nhập hướng dẫn cách làm"
                                    android:background="@drawable/custom_frame_input"
                                    android:layout_width="match_parent"
                                    android:inputType="textMultiLine"
                                    android:gravity="start"
                                    android:textSize="@dimen/sp16"
                                    android:padding="@dimen/dp5"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:weightSum="10"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/dp5"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/cb_prepair_stage_edit"
                                    android:layout_weight="5.7"
                                    android:text="Công đoạn chuẩn bị"
                                    android:layout_width="@dimen/dp0"
                                    android:textSize="@dimen/sp13"
                                    android:layout_height="wrap_content"/>

                                <FrameLayout
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:layout_width="@dimen/dp0">
                                    <ImageView
                                        android:id="@+id/img_step_make_1_edit"
                                        android:padding="1.334dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_add_picture"
                                        android:layout_width="@dimen/dp40"
                                        android:layout_height="@dimen/dp40"/>
                                    <ImageView
                                        android:src="@drawable/custom_frame_input"
                                        android:layout_width="@dimen/dp40"
                                        android:layout_height="@dimen/dp40"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:layout_width="@dimen/dp0">
                                    <ImageView
                                        android:id="@+id/img_step_make_2_edit"
                                        android:padding="1.334dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_add_picture"
                                        android:layout_width="@dimen/dp40"
                                        android:layout_height="@dimen/dp40"/>
                                    <ImageView
                                        android:src="@drawable/custom_frame_input"
                                        android:layout_width="@dimen/dp40"
                                        android:layout_height="@dimen/dp40"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:layout_width="@dimen/dp0">
                                    <ImageView
                                        android:id="@+id/img_step_make_3_edit"
                                        android:padding="1.334dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/custome_frame_video_input"
                                        android:layout_width="@dimen/dp40"
                                        android:layout_height="@dimen/dp40"/>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp40"
                                        android:src="@drawable/custom_frame_input" />
                                </FrameLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_edit_make_step_edit"
                            android:src="@drawable/ic_edit"
                            android:layout_weight="1"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_item_step_make_edit"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_button_add_make_step_edit"
                    android:src="@drawable/ic_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:text="Ấn vào để tạo thêm bước nấu ăn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0">
        <Button
            android:id="@+id/btn_done_edit"
            android:text="Lưu"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:background="@drawable/custom_button_next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>