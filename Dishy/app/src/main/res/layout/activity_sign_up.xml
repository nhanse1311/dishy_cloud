<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout
        android:weightSum="2"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/custom_login_form_left"
            android:layout_width="@dimen/dp0"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/custom_login_form_right"
            android:layout_width="@dimen/dp0"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dinner" />
        </LinearLayout>

        <TextView
            android:text="Đăng Ký Tài Khoản"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp25"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp20"
            android:paddingLeft="@dimen/dp20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/custom_form_search"
                android:orientation="horizontal"
                android:padding="@dimen/dp8"
                android:weightSum="10">

                <ImageView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_person_red" />

                <EditText
                    android:id="@+id/txt_sua_username"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:hint="Tên đăng nhâp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/custom_form_search"
                android:orientation="horizontal"
                android:padding="@dimen/dp8"
                android:weightSum="10">

                <ImageView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_person_red" />

                <EditText
                    android:id="@+id/txt_sua_fullname"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:hint="Họ và Tên"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/custom_form_search"
                android:drawablePadding="@dimen/dp8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp8"
                android:weightSum="10">

                <ImageView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lock_black" />

                <EditText
                    android:id="@+id/txt_sua_password"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@android:color/transparent"
                    android:hint="Mật khẩu"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/sp20" />

                <ImageView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_visibility" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/custom_form_search"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:drawablePadding="@dimen/dp8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:gravity="center_vertical"
                android:padding="@dimen/dp8"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_lock_black"
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/txt_sua_confirm_password"
                    android:layout_weight="8"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp20"
                    android:hint="Nhập Lại Mật khẩu"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />
                <ImageView
                    android:src="@drawable/ic_visibility"
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="@dimen/dp150"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@drawable/button_background"
                android:text="Đăng Ký"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp16"
                android:textStyle="bold"
                android:onClick="clickToHome"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/custom_login_form_left_bottom"
            android:layout_width="@dimen/dp0"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/custom_login_form_right_bottom"
            android:layout_width="@dimen/dp0"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>