<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".fragments.EditTwoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:text="II.Nguyên Liệu"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/custom_frame_input"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:padding="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_number_edit"
                        android:text="1"
                        android:layout_marginTop="@dimen/dp5"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/custom_button_next_step"
                        android:gravity="center"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"/>

                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="9"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Tên nguyên liệu"
                                    android:textSize="@dimen/sp16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <EditText
                                    android:id="@+id/edt_name_nl_edit"
                                    android:background="@drawable/custom_frame_input"
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/sp16"
                                    android:padding="@dimen/dp5"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/dp5"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Đơn Vị"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:id="@+id/ll_nguyen_lieu_1_edit"
                                    android:padding="@dimen/dp5"
                                    android:orientation="horizontal"
                                    android:weightSum="10"
                                    android:background="@drawable/custom_frame_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/txt_unit_edit"
                                        android:layout_weight="9"
                                        android:text="Chưa chọn"
                                        android:textSize="@dimen/sp16"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/dp5"
                                        android:layout_width="@dimen/dp0"
                                        android:layout_height="match_parent"/>
                                    <ImageView
                                        android:src="@drawable/ic_arrow_drop_down"
                                        android:layout_width="@dimen/dp0"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/dp5"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Số lượng nguyên liệu"
                                    android:textSize="@dimen/sp16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <EditText
                                    android:id="@+id/edt_quality_material_edit"
                                    android:background="@drawable/custom_frame_input"
                                    android:layout_width="match_parent"
                                    android:inputType="number"
                                    android:textSize="@dimen/sp16"
                                    android:padding="@dimen/dp5"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_edit_edit"
                            android:src="@drawable/ic_edit"
                            android:layout_weight="1"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_item_material_edit"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_button_add_edit"
                    android:src="@drawable/ic_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:text="Ấn vào để thêm nguyên liệu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0">
        <Button
            android:id="@+id/btn_next_step_wto_edit"
            android:text="@string/next_step"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:background="@drawable/custom_button_next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>