<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.ChefActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_chef_activity"
        app:title="Nguyễn Thanh Nhàn"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorMain"
        android:visibility="gone"
        app:navigationIcon="@drawable/ic_keyboard_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<androidx.core.widget.NestedScrollView
    android:id="@+id/scv_cheff_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="222dp">
            <ImageView
                android:id="@+id/ll_cover_chef"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
            <LinearLayout
                android:id="@+id/ll_cover_chef_white"
                android:alpha="0.3"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
            <ImageView
                android:id="@+id/img_cover_back_butotn"
                android:src="@drawable/ic_keyboard_black"
                android:padding="@dimen/dp2"
                android:background="@drawable/custom_frame_back"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="@dimen/dp10"
                android:layout_marginTop="75dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_avatar_chef_activity"
                    app:riv_border_width="@dimen/dp2"
                    app:riv_border_color="@color/colorWhite"
                    app:riv_corner_radius="@dimen/dp50"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/txt_name_chef_activity"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:text="Nguyễn Thanh Nhàn"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_favorite"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:id="@+id/txt_number_liker_activity"
                        android:text="1000 người thích"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/dp20"
                        android:src="@drawable/ic_description"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:id="@+id/txt_number_recipe_activity"
                        android:text="10 công thức"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:orientation="horizontal">
        <TextView
            android:text="@string/danh_s_ch_c_ng_th_c"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/sp15"
            android:layout_weight="9"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_fillter_ca"
                android:src="@drawable/ic_sort_red"
                android:layout_weight="1"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_recip_of_chef"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>