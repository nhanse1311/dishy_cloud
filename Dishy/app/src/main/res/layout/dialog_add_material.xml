<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/custom_bottom_sheet"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:text="Nhập thông tin nguyên liệu"
        android:textSize="@dimen/sp15"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_name_material_dialog"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/custom_frame_input"
        android:padding="@dimen/dp10"
        android:paddingRight="@dimen/dp20"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:textSize="@dimen/sp15"
        android:hint="Nhập tên nguyên liệu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_dialog_unit_item"
        android:padding="@dimen/dp10"
        android:weightSum="10"
        android:background="@drawable/custom_frame_input"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_dialog_unit"
            android:hint="Chọn đơn vị"
            android:layout_weight="9"
            android:textSize="@dimen/sp15"
            android:gravity="center_vertical"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_quality_dialog"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/custom_frame_input"
        android:padding="@dimen/dp10"
        android:paddingRight="@dimen/dp20"
        android:inputType="number"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:textSize="@dimen/sp15"
        android:hint="Nhập số lượng nguyên liệu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_ok_add_material"
            android:background="@drawable/custom_button_next_step"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginLeft="@dimen/dp30"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp10"
            android:text="OK"
            android:layout_weight="1"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_ok_delete_material"
            android:background="@drawable/custom_button_next_step"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginLeft="@dimen/dp30"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp10"
            android:text="Xoá"
            android:layout_weight="1"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>