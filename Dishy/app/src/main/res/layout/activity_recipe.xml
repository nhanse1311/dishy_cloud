<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F3"
    tools:context=".activities.RecipeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_ra"
        android:visibility="gone"
        app:navigationIcon="@drawable/ic_keyboard_return"
        app:titleTextColor="@color/colorWhite"
        app:title="Ga chien nuoc mam"
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<androidx.core.widget.NestedScrollView
    android:id="@+id/nsv_recipe_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200">

        <ImageView
            android:id="@+id/img_avatar_food_ra"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_button_back_recipe_activity"
            android:padding="@dimen/dp3"
            android:background="@drawable/custom_frame_back"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@drawable/ic_keyboard_black"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorWhite"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_star_recipe_1"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_2"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_3"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_4"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_5"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/dp3"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_favorite_ra"
                android:src="@drawable/ic_favorite_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_number_favorite_recipe_ra"
                android:layout_marginLeft="@dimen/dp5"
                android:text="20"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_save_recipe_ra"
                android:layout_marginLeft="@dimen/dp10"
                android:src="@drawable/ic_file_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txt_name_save_recipe"
                android:layout_marginLeft="@dimen/dp5"
                android:text="Lưu về"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_name_recipe_ra"
            android:text="@string/app_name"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ẩm thực Trung Hoa đa dạng, phong phú như một quyển tiểu thuyết dài tập, không bao giờ kể hết được. Những món ăn ở đây đều có ý nghĩa của nó. Mì trường thọ là một trong những món như vậy, chúng ta cùng tìm hiểu món ăn ngon đặc biệt này nhé!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp3"
            android:background="#F5F3F3"/>
    <LinearLayout
        android:id="@+id/ll_chef_ra"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_avatar_chef_ra"
            android:visibility="gone"
            android:src="@mipmap/logo"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            app:riv_border_width="@dimen/dp1"
            app:riv_border_color="@color/colorWhite"
            app:riv_corner_radius="@dimen/dp50" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="7">
            <TextView
                android:id="@+id/txt_name_chef_ra"
                android:textStyle="bold"
                android:textSize="@dimen/sp20"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                       android:src="@drawable/ic_favorite"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_number_favorite_ra"
                        android:layout_marginLeft="@dimen/dp5"
                        android:text="999"
                        android:textSize="@dimen/sp16"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_following_recipe_activity"
                android:background="@drawable/custom_frame_input"
                android:visibility="gone"
                android:text="Theo dõi"
                android:padding="@dimen/dp5"
                android:layout_gravity="center"
                android:textColor="#6D6A6A"
                android:gravity="center"
                android:textSize="@dimen/sp16"
                android:layout_weight="3"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/custom_number_eater"
        android:layout_gravity="right"
        android:paddingRight="@dimen/dp15"
        android:paddingLeft="@dimen/dp15"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/txt_number_eater"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="10"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/sp18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp5"
            android:text="khẩu phần"
            android:layout_gravity="center"
            android:textSize="@dimen/sp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp5">
            <Button
                android:id="@+id/btn_div"
                android:text="-"
                android:textStyle="bold"
                android:textSize="@dimen/sp25"
                android:textColor="@color/colorWhite"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:background="@drawable/custom_button_next_step"/>
            <Button
                android:id="@+id/btn_sum"
                android:layout_marginLeft="@dimen/dp10"
                android:text="+"
                android:textStyle="bold"
                android:textSize="@dimen/sp25"
                android:textColor="@color/colorWhite"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:background="@drawable/custom_button_next_step"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/custom_frame_material"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:text="@string/material"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_weight="7"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp35"/>
            <TextView
                android:text="Số lượng"
                android:gravity="center"
                android:textSize="@dimen/sp13"
                android:layout_weight="1.5"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp35"/>
            <TextView
                android:text="Đơn vị"
                android:gravity="right"
                android:textSize="@dimen/sp13"
                android:layout_weight="1.5"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp35"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_material_recipe_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Các bước thực hiện"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_make_step_ra"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_bottom_sheet"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="Bình luận"
                android:textSize="@dimen/dp15"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_chef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:padding="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_ruby"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Hoàng Bá Khánh"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:padding="@dimen/dp5"
                        android:text="Món này rất ngon"
                        android:textColor="#6D6A6A"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:background="@drawable/custom_comment"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:padding="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Để lại bình luận công thức này"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="Đánh giá, bình luận để giúp tác giả hoàn thiện công thức hơn"
                        android:textColor="#6D6A6A"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <Button
           android:id="@+id/btn_do_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Thực hiện"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@color/colorMain"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>