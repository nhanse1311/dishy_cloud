<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_dishy_follow"
            android:src="@drawable/img_check"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp120"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp60"
            android:layout_width="match_parent"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="3.5dp"
            android:alpha="0.3"
            android:background="@color/colorBlack"
            android:layout_height="@dimen/dp44"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp60"
            android:layout_width="match_parent"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="3.5dp"
            android:layout_height="@dimen/dp44">
            <LinearLayout
                android:background="#FF9800"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_width="@dimen/dp3"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_name_dishy_follow"
                    android:text="Cơm gà"
                    style="@style/AudioFileInfoOverlayText"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/dp5"
                    android:textSize="@dimen/sp16"
                    android:maxLength="18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_time_dishy_follow"
                    android:text="10 phút"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_marginBottom="@dimen/dp3"
                    android:layout_marginRight="@dimen/dp5"
                    android:textSize="@dimen/sp14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp150"
            android:layout_height="120dp"
            android:src="@drawable/custom_frame_border_image" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar_follow"
            android:layout_weight="1"
            app:riv_border_color="@color/colorWhite"
            app:riv_border_width="@dimen/dp1"
            android:layout_gravity="center"
            app:riv_corner_radius="@dimen/dp50"
            android:layout_width="80px"
            android:layout_height="70px"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"
            android:scaleType="fitXY"
            android:src="@color/colorBlue"/>
        <LinearLayout
            android:layout_weight="9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/loginName_follow"
                android:layout_marginTop="@dimen/dp3"
                android:layout_width="@dimen/dp100"
                android:layout_height="match_parent"
                android:text="Thanh Nhàn"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>