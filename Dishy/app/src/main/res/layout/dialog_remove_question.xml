<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:padding="@dimen/dp10"
    android:background="@drawable/custom_bottom_sheet"
    android:layout_height="wrap_content">
    <TextView
        android:text="Bạn có muốn xoá công thức nấu ăn của mình hay không ?"
        android:gravity="center"
        android:textSize="@dimen/sp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_confirm_remove"
            android:text="Có"
            android:background="@drawable/custom_button_next_step"
            android:padding="@dimen/dp8"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_no_confirm_remove"
            android:text="Không"
            android:layout_marginLeft="@dimen/dp20"
            android:background="@drawable/custom_button_next_step"
            android:padding="@dimen/dp8"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>